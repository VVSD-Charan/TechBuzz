<%- include("partials/header") -%>

    <h1 style="text-align: center;">Compose </h1>

    <div style="width: 50%; margin: 0 25%;">
        <form action="/compose" method="post">
            <div class="form-group">
                <label for="postTitle">Title</label>
                <input class="form-control" type="text" name="postTitle" id="postTitle">
            </div>

            <div class="form-group">
                <label for="postBody">Description</label>
                <textarea class="form-control" name="postBody" id="postBody" cols="30" rows="5"></textarea>
            </div>

            <button class="btn btn-primary" type="submit">Publish</button>
        </form>
    </div>

    <%- include("partials/footer") -%>